
#settings-wrapper(hidden)
    #settings-topbar
        .flex
        .settings-close
            #btn-close-settings.btn
                i.ion-ios-close-empty
    form#settings-form
        .settings.settings-general
            .setting
                span Dark mode
                if darkmode
                    input#pref-darkmode(type="checkbox" name="darkmode" checked)
                else
                    input#pref-darkmode(type="checkbox" name="darkmode")
            .setting
                span Font family
                select(name="fontfamily")
                    -
                        const fonts = ['FiraSans', 'BadScript', 'AmaticSC',
                                     'Handlee', 'IndieFlower', 'OpenSans',
                                     'PlayfairDisplay', 'PTSans', 'RobotoLight',
                                     'RobotRegular', 'RobotoThin'].sort()
                    each val in fonts
                        if val === fontfamily
                            option(value=`${val}` selected)= val
                        else
                            option(value=`${val}`)= val
            .setting
                span Font size
                input#setting-font-size(type="range" min="8" max="46" step="2" value=`${fontsize}` name="fontsize")
                small.small#setting-font-size-text Default
        .settings.settings-theme
            .setting
                span Theme
                .setting.setting-small
                    label Use video
                    if usevideo
                        input(type="checkbox" name="usevideo" checked)
                    else
                        input(type="checkbox" name="usevideo")
                -
                    const themes = ['Default', 'Winter', 'Aurora',
                                    'Evening', 'Kaleidoscope', 'Lake',
                                    'Rainstorm', 'Psychedelic', 'Sea',
                                    'Space', 'Waves', 'Wind Energy'].sort()
                .settings-theme-wrapper
                    each val in themes
                        - let id = val.replace(/\s/g,'').toLowerCase()
                        if id === theme
                            .settings-theme
                                input(type="radio" name="theme" id=id class="input-hidden" value=id checked)
                                label(for=id)
                                    .theme-img(style=`background-image: url(images/${id}.jpg)`)
                                span= val
                        else
                            .settings-theme
                                input(type="radio" name="theme" id=id class="input-hidden" value=id)
                                label(for=val.toLowerCase())
                                    .theme-img(style=`background-image: url(images/${id}.jpg)`)
                                span= val
