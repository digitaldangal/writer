#settings-wrapper
    height 100%
    width 100vw
    position absolute
    z-index 100
    background-color desertstorm
    top 0
    left 0
    top -25px

#settings-topbar
    display flex
    padding 0 25px
    margin 25px 0 0 0

#settings-form
    padding 0 25px

.input-hidden
    position absolute
    left -9999px


input[type="range"]
    -webkit-appearance none !important
    height 15px
    radius 10px
    transition all 0.3s ease
    background-color rgb(110, 236, 237)


input[type="range"]::-webkit-slider-thumb
    -webkit-appearance none !important
    width 20px
    height 20px
    box-shadow 0px 0px 3px rgb(78, 102, 179)    
    transition all 0.5s ease


input[type=radio]:checked + label > img
    border 1px solid #fff
    box-shadow 0 0 3px 3px #090

input[type=radio] + label>img
    border 1px dashed #444
    width 150px
    height 150px
    transition 500ms all

input[type=radio]:checked + label>img
    transform rotateZ(-10deg) rotateX(10deg)
