#settings-wrapper
    min-height 100vh
    width 100vw
    position fixed
    overflow hidden
    z-index 100
    background-color desertstorm
    top 0
    left 0
    opacity 0

#settings-topbar
    display flex
    padding 0 25px
    margin 25px 0 0 0

#settings-form
    padding 0 25px
    display flex
    flex-direction row
    .settings
        margin-right 50px
        .setting
            margin-bottom 25px
        span
            text-transform uppercase
            color darkergrey
        input
            display block
        .settings-theme-wrapper
            display flex
            flex-direction row
            flex-wrap wrap
            overflow-y scroll
            height 800px
            width 400px
            margin-top 25px
            position relative
            .settings-theme
                margin-right 25px
                text-align center
                .theme-img
                    -webkit-background-size cover
                span
                    text-transform none
                    font-size 16px
                    display block

.input-hidden
    position absolute
    left -9999px


input[type="range"]
    -webkit-appearance none !important
    height 15px
    radius 10px
    transition all 0.3s ease
    background-color rgb(110, 236, 237)


input[type="range"]::-webkit-slider-thumb
    -webkit-appearance none !important
    width 20px
    height 20px
    box-shadow 0px 0px 3px rgb(78, 102, 179)
    transition all 0.5s ease


input[type=radio]:checked + label > .theme-img
    border 2px solid mineshaft

input[type=radio] + label>.theme-img
    border 2px solid transparent
    width 150px
    height 150px
    transition 500ms all

input[type=radio]:checked + label>.theme-img
    opacity 1
