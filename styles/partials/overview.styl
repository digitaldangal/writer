.overviews
    position relative
    display flex
    flex-direction row
    flex-wrap wrap
    .overview
        display flex
        justify-content center
        align-items center
        width 150px
        height 200px
        border-radius 5px
        color shadylady
        background-color eggwhite
        font-size 50px
        cursor pointer
        box-shadow inset 0 0 5px 1px asbestos
        margin 10px
    .overview-new-file
        @extend .overviews .overview
        background-color silversand
        &:hover
            background-color asbestos
